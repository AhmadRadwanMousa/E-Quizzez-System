# ========================================
# E-Quizzez Platform Environment Variables
# ========================================
# Copy this file to .env and configure your settings

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
DB_PATH=./database.sqlite

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production
JWT_EXPIRES_IN=24h

# Admin Default Credentials (created on first run)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@ukf.ac.ae

# CORS Configuration (optional)
CORS_ORIGIN=http://localhost:3000

# Logging Configuration (optional)
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ========================================
# Production Settings (when NODE_ENV=production)
# ========================================
# JWT_SECRET=use-a-very-long-random-string-here
# DB_PATH=/var/lib/e-quizzez/database.sqlite
# CORS_ORIGIN=https://yourdomain.com
# LOG_LEVEL=error
# ========================================

